<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_button"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/numberPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clearButton"/>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addButton"
        app:layout_constraintTop_toTopOf="@+id/addButton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/firstNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/secondNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/thirdNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/fourthNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/fifthNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/sixthNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            android:layout_margin="5dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/runButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run_button"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>